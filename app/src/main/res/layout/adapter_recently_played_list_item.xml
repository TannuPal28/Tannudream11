<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginEnd="@dimen/dimen_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KKR"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/dimen_12sp"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:drawableStart="@drawable/plus_icon"
                    android:layout_marginHorizontal="@dimen/dimen_5dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textColor="@color/grey400"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/dimen_10dp"
                    android:layout_marginHorizontal="@dimen/dimen_5dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SRH"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/dimen_12sp"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:drawableStart="@drawable/plus_icon"
                    android:layout_marginHorizontal="@dimen/dimen_5dp"/>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Cricket"
                android:layout_margin="@dimen/dimen_10dp"
                android:paddingHorizontal="@dimen/dimen_10dp"
                android:background="@color/brown_50"
                android:textColor="@color/grey800"
                android:textSize="@dimen/dimen_12sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GT best RCB by 8 wickets"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_below="@+id/llTeamName"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apr 02,2025"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_below="@+id/llTeamName"/>

            <RelativeLayout
                android:id="@+id/rvteamDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown_50"
                android:layout_below="@+id/tvTeamName"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest Points"
                    android:textColor="@color/grey600"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHPCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="814.0"
                    android:layout_below="@id/tvHP"
                    android:textColor="@color/black"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTeamsCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teams Created"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/grey600"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/teamCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tvHP"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dream Team 1124 spts"
                android:textColor="@color/grey800"
                android:background="@color/pink_50"
                android:paddingHorizontal="@dimen/dimen_10dp"
                android:layout_below="@+id/rvteamDetail"/>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</layout>